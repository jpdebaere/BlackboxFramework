	import HostConsole, Strings
	
	proc Open*
	begin 
		HostConsole.Open
	end Open
	
	proc WriteStr*(in str: array of char)
	begin 
		HostConsole.WriteStr(str)
	end WriteStr
	
	proc WriteChar*(ch: char)
		var 
			str: array 2 of char
	begin 
		str[0] := ch
		str[1] := 0x
		HostConsole.WriteStr(str)
	end WriteChar
	
	proc WriteInt*(i: longint)
		var 
			str: array 24 of char
	begin 
		Strings.IntToString(i, str)
		HostConsole.WriteStr(str)
	end WriteInt
	
	proc WriteLn*
	begin 
		HostConsole.WriteLn
	end WriteLn
	
	proc ReadLn*(var line: array of char)
	begin 
		HostConsole.ReadLn(line)
	end ReadLn

end Console
